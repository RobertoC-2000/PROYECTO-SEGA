@model IEnumerable<PIA_PRUEBA.Models.Customer>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Registrar cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.iCustomer_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vEMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iCreation_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active.vActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address.vAddress)
