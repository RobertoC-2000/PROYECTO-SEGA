    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.iCustomer_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vEMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.iCreation_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active.vActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address.vAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.iStore_ID)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.iCustomer_ID }) |
            @Html.ActionLink("Mostrar", "Details", new { id=item.iCustomer_ID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.iCustomer_ID })
        </td>
    </tr>
}

</table>
